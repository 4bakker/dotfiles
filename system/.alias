# Shortcuts

alias e="$EDITOR"
alias g="git"
alias gg="$GIT_GUI"

alias chrome="open -a ~/Applications/Google\ Chrome.app"
alias canary="open -a ~/Applications/Google\ Chrome\ Canary.app"
alias firefox="open -a ~/Applications/Firefox.app"

eval "$(hub alias -s)" # alias git=hub

# ls

alias l="ls -la"            # List in long format, include dotfiles
alias la="ls -lAh"          # List in long format, all entries except for . and .., use unit suffixes (KB, MB etc.)
alias ld="ls -ld */"        # List in long format, only directories

# cd

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias -- -="cd -"

alias bd=". bd -s"

# tree

alias tree="tree -A"
alias trd="tree -d"
alias trl1="tree -d -L 1"
alias trl2="tree -d -L 2"

# npm

alias ni="npm install"
alias nu="npm uninstall"
alias npme="npm --registry http://registry.npmjs.eu"

# Start screen saver

alias afk="/System/Library/Frameworks/ScreenSaver.framework/Resources/ScreenSaverEngine.app/Contents/MacOS/ScreenSaverEngine"

# Log off

alias logoff="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

# Show/hide desktop icons

alias desktopshow="defaults write com.apple.finder CreateDesktop -bool true && killfinder"
alias desktophide="defaults write com.apple.finder CreateDesktop -bool false && killfinder"


# HTTP stuff

## Webserver

alias srv="http-server"

## IP addresses

alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
#alias ip="curl -s http://checkip.dyndns.org | sed 's/[a-zA-Z/<> :]//g'"
alias ipl="ipconfig getifaddr en0"
alias ipa="ifconfig -a | grep -o 'inet6\? \(\([0-9]\+\.[0-9]\+\.[0-9]\+\.[0-9]\+\)\|[a-fA-F0-9:]\+\)' | sed -e 's/inet6* //'"

## Request using GET, POST, etc. method

for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
	alias "$method"="lwp-request -m '$method'"
done

## Speed Test

alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"

# Clean/kill stuff

## Flush DNS

alias flushdns="dscacheutil -flushcache && killall -HUP mDNSResponder"

## Clean up LaunchServices to remove duplicates in the "Open With" menu

alias lscleanup="/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user && killall Finder"

## Empty trash on mounted volumes and main HDD, and clear system logs

alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"

## Recursively remove .DS_Store files

alias cleanupds="find . -type f -name '*.DS_Store' -ls -delete"

## Reload native apps

alias killfinder="killall Finder"
alias killdock="killall Dock"
alias killmenubar="killa SystemUIServer NotificationCenter"
alias killosx="killfinder && killdock && killmenubar"

## Kill all the tabs in Chrome to free up memory

alias chromekill="ps ux | grep '[C]hrome Helper --type=renderer' | grep -v extension-process | tr -s ' ' | cut -d ' ' -f2 | xargs kill"
